@model IEnumerable<restaurante.Models.Pedido>

@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<div class="container-fluid p-4">
    <div class="pedidos-header position-relative mb-5 p-4 rounded-4">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold header-title">Gestión de Pedidos</h1>
                <p class="header-subtitle mb-0 mt-2">Administra los pedidos y sus detalles</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <div class="current-date p-3 rounded-3 d-inline-block">
                    <i class="fas fa-utensils me-2"></i>
                    <span>Sistema de Pedidos</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="fas fa-plus-circle text-primary me-2"></i>
                        Crear Nuevo Pedido
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <input type="hidden" name="IdUsuario" value="@ViewData["CurrentUserId"]" />

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Fecha y Hora</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                                <input type="datetime-local" name="FechaHora" class="form-control" required />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Estado</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-tag"></i>
                                </span>
                                <select name="Estado" class="form-select" required readonly>
                                    <option value="pendiente" selected>Pendiente</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Método de Pago</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-credit-card"></i>
                                </span>
                                <select name="MetodoPago" class="form-select" required>
                                    <option value="efectivo">Efectivo</option>
                                    <option value="tarjeta">Tarjeta</option>
                                    <option value="otro">Otro</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Seleccionar Ítems</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-list"></i>
                                </span>
                                <select id="Items" name="IdItems" class="form-select" multiple asp-items="ViewBag.IdItem" required>
                                </select>
                            </div>
                        </div>

                        <div id="cantidadesContainer" class="mb-4"></div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-save me-2"></i>
                            Crear Pedido
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="fas fa-cart-plus text-success me-2"></i>
                        Agregar Detalle a Pedido
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateDetalle" class="needs-validation" novalidate>
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Pedido</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-shopping-cart"></i>
                                </span>
                                <select name="IdPedido" class="form-select" asp-items="@(new SelectList(Model, "IdPedido", "IdPedido"))" required>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Item</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-hamburger"></i>
                                </span>
                                <select name="IdItem" class="form-select" asp-items="ViewBag.IdItem" required>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Cantidad</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-sort-numeric-up"></i>
                                </span>
                                <input type="number" name="Cantidad" class="form-control" min="1" required />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Notas</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-sticky-note"></i>
                                </span>
                                <textarea name="Notas" class="form-control" rows="3"></textarea>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-plus me-2"></i>
                            Agregar Detalle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-lg">
        <div class="card-header bg-white border-0 py-4">
            <h5 class="card-title mb-0 fw-bold">
                <i class="fas fa-list-alt text-info me-2"></i>
                Lista de Pedidos
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0">ID</th>
                            <th class="border-0">Fecha</th>
                            <th class="border-0">Usuario</th>
                            <th class="border-0">Estado</th>
                            <th class="border-0">Total</th>
                            <th class="border-0">Método de Pago</th>
                            <th class="border-0">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr class="pedido-row">
                                <td class="fw-bold">@pedido.IdPedido</td>
                                <td>@pedido.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@pedido.IdUsuarioNavigation.Email</td>
                                <td>
                                    <span class="badge bg-@(pedido.Estado switch {
                                        "pendiente" => "warning",
                                        "en_preparacion" => "info",
                                        "listo" => "success",
                                        "entregado" => "primary",
                                        _ => "danger"
                                    }) rounded-pill">@pedido.Estado</span>
                                </td>
                                <td class="fw-bold text-success">@pedido.Total.ToString("C")</td>
                                <td>
                                    <i class="fas @(pedido.MetodoPago switch {
                                        "efectivo" => "fa-money-bill-wave",
                                        "tarjeta" => "fa-credit-card",
                                        _ => "fa-wallet"
                                    }) me-2"></i>
                                    @pedido.MetodoPago
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@pedido.IdPedido"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("administrador") || User.IsInRole("personal"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@pedido.IdPedido"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                            <tr class="detalles-row">
	                            <td colspan="7" class="p-0">
		                            <div class="table-responsive">
			                            <table class="table table-borderless table-sm bg-light mb-0">
				                            <thead class="table-secondary">
				                            <tr>
					                            <th>Item</th>
					                            <th>Cantidad</th>
					                            <th>Precio Unitario</th>
					                            <th>Subtotal</th>
					                            <th>Notas</th>
					                            <th>Acciones</th>
				                            </tr>
				                            </thead>
				                            <tbody>
				                            @foreach (var detalle in pedido.DetallesPedidos)
				                            {
					                            <tr>
						                            <td>
							                            <i class="fas fa-utensils me-2"></i>
							                            @detalle.IdItemNavigation.Nombre
						                            </td>
						                            <td>
							                            <span class="badge bg-primary rounded-pill">
								                            @detalle.Cantidad
							                            </span>
						                            </td>
						                            <td>@detalle.PrecioUnitario.ToString("C")</td>
						                            <td class="fw-bold">@detalle.Subtotal.ToString("C")</td>
						                            <td>
							                            <small class="text-muted">@detalle.Notas</small>
						                            </td>
						                            <td>
							                            <div class="btn-group btn-group-sm">
								                            <a asp-action="EditDetalle" asp-route-id="@detalle.IdDetalle"
								                               class="btn btn-outline-primary">
									                            <i class="fas fa-edit"></i>
								                            </a>
								                            <form asp-action="DeleteDetalle" asp-route-id="@detalle.IdDetalle"
								                                  method="post" class="d-inline">
									                            <button type="submit" class="btn btn-outline-danger"
									                                    onclick="return confirm('¿Está seguro?');">
										                            <i class="fas fa-trash"></i>
									                            </button>
								                            </form>
							                            </div>
						                            </td>
					                            </tr>
				                            }
				                            </tbody>
			                            </table>
		                            </div>
	                            </td>
                            </tr>
                            <tr class="spacer">
	                            <td colspan="7"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .pedidos-header {
        background: linear-gradient(45deg, #e8e9ec, #ffffff);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .header-title {
        color: #2c3e50;
    }

    .header-subtitle {
        color: #34495e;
    }

    .current-date {
        background-color: #2c3e50;
        color: #ffffff;
    }

    .card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
        }

    .input-group-text {
        border: none;
    }

    .form-control, .form-select {
        border: 1px solid #e0e0e0;
    }

        .form-control:focus, .form-select:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

    .btn-group {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
    }

    .pedido-row {
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .pedido-row:hover {
            background-color: #f8f9fa;
        }

    .badge {
        padding: 0.5em 1em;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
    }

    .table > tbody > tr.spacer {
        height: 1rem;
        background-color: #f8f9fa;
    }

    .pedido-detalles {
        background-color: #f8f9fa;
        border-radius: 0 0 15px 15px;
        box-shadow: inset 0 2px 5px rgba(0,0,0,0.05);
        margin-bottom: 1rem;
    }

    .detalles-row {
        border-top: none !important;
    }

    .pedido-row {
        border-top: 2px solid #e9ecef;
        background-color: white;
    }

        .pedido-row:hover {
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

    .table-hover tbody tr.spacer:hover {
        background-color: #f8f9fa;
    }

    .table > :not(:first-child) {
        border-top: none;
    }

    .table-secondary {
        background-color: #edf2f7 !important;
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    .card-body.p-0 {
        padding: 1rem !important;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0 0.5rem;
    }
</style>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script>
        $(document).ready(function () {
            // Script original para manejar cantidades de items
            $('#Items').change(function () {
                var selectedItems = $(this).val();
                var container = $('#cantidadesContainer');
                container.empty();

                selectedItems.forEach(function (item) {
                    container.append(`
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-hashtag me-2"></i>
                                        Cantidad para item ${item}
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-sort-numeric-up"></i>
                                        </span>
                                        <input type="number"
                                               name="Cantidades"
                                               class="form-control"
                                               min="1"
                                               value="1"
                                               required />
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                onclick="decrementValue(this)">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                onclick="incrementValue(this)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            `);
                });
            });

            // Funciones auxiliares para los botones +/-
            window.incrementValue = function (btn) {
                var input = $(btn).closest('.input-group').find('input');
                var currentValue = parseInt(input.val()) || 0;
                input.val(currentValue + 1);
            }

            window.decrementValue = function (btn) {
                var input = $(btn).closest('.input-group').find('input');
                var currentValue = parseInt(input.val()) || 0;
                if (currentValue > 1) {
                    input.val(currentValue - 1);
                }
            }

            // Prevenir valores negativos
            $(document).on('input', 'input[type="number"]', function () {
                if ($(this).val() < 1) {
                    $(this).val(1);
                }
            });

            // Agregar un primer item al cargar la página
            if ($('#Items').length) {
                $('#Items').trigger('change');
            }
        });
    </script>

}