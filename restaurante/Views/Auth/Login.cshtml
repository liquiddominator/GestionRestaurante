@model restaurante.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    ViewData["HideHeaderAndFooter"] = true;
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-styles.css" />
}

<div class="auth-container">
    <div class="auth-logo">
        <i class="fas fa-utensils"></i> Restaurante Gourmet
    </div>
    <h2>Iniciar Sesión</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <center>
        <button type="submit" class="btn btn-success btn-block">Ingresar</button>
        </center>
    </form>
    <div class="text-center mt-4">
        <a asp-action="Register" class="text-success">¿No tienes una cuenta? Regístrate aquí</a>
    </div>
</div>