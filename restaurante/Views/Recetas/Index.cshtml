@model IEnumerable<restaurante.Models.Receta>
@{
    ViewData["Title"] = "Recetas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Restaurante</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/menu-styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="text-center mt-4 mb-4">
            <a asp-action="Create" class="btn btn-primary btn-lg">Crear Nueva Receta</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100" onclick="location.href='@Url.Action("Details", new { idItem = item.IdItem, idInventario = item.IdInventario })'">
                        <div class="card-body">
                            <h5 class="card-title">@item.IdItemNavigation.Nombre</h5>
                            <p class="card-text"><strong>Ingrediente:</strong> @item.IdInventarioNavigation.Nombre</p>
                            <p class="card-text"><strong>Cantidad Requerida:</strong> @item.CantidadRequerida</p>
                        </div>
                        <div class="card-footer">
                            <div class="button-container">
                                <a asp-action="Edit" asp-route-idItem="@item.IdItem" asp-route-idInventario="@item.IdInventario" class="btn btn-primary" onclick="event.stopPropagation();">Editar</a>
                                <a asp-action="Delete" asp-route-idItem="@item.IdItem" asp-route-idInventario="@item.IdInventario" class="btn btn-primary" onclick="event.stopPropagation();">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>